<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.orangelabs.rcs.ri"
      android:versionCode="1"
      android:versionName="2.1.2">
      
	<uses-sdk android:minSdkVersion="5" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
	<uses-permission android:name="android.permission.CALL_PHONE"/>
	<uses-permission android:name="android.permission.CALL_PRIVILEGED"/>
	<uses-permission android:name="android.permission.CAMERA"/>
	<uses-permission android:name="android.permission.VIBRATE"/>
	<uses-permission android:name="com.android.browser.permission.READ_HISTORY_BOOKMARKS" />
	      
    <application android:icon="@drawable/ri_icon" android:label="@string/app_name">

		<!-- Main --> 
        <activity android:name=".RcsRI">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".AboutRI"/>

        <activity android:name=".utils.bookmark.BrowserBookmarksPage"/>

		<!-- Presence RI --> 
        <activity android:name=".PresenceRI"/>

        <activity android:name=".presence.PublishPresenceInfo"
        	android:icon="@drawable/ri_quick_me_icon"
        	android:label="@string/label_quick_me">
			<intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="vnd.android.cursor.item/com.orangelabs.rcs.my-profile" />
            </intent-filter>
		</activity>

        <activity android:name=".presence.ManageContactList"
        	android:icon="@drawable/ri_quick_invite_icon"
        	android:label="@string/label_quick_invite">
			<intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="vnd.android.cursor.item/com.orangelabs.rcs.rcs-capable-contact" />
            </intent-filter>
        </activity>

        <activity android:name=".presence.GrantedContactList"/>
        
        <activity android:name=".presence.BlockedContactList"/>
        
        <activity android:name=".presence.RevokedContactList"/>

        <activity android:name=".presence.ShowEab"
        	android:icon="@drawable/ri_quick_contact_icon"
        	android:label="@string/label_quick_contact">
			<intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="vnd.android.cursor.item/com.orangelabs.rcs.rcs-contact" />
            </intent-filter>
        </activity>

        <activity android:name=".presence.NormalContact"
        	android:theme="@style/PopupDialogTheme"
        	android:icon="@drawable/ri_quick_rcs_icon"
        	android:label="@string/label_quick_rcs">
			<intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="vnd.android.cursor.item/com.orangelabs.rcs.not-rcs-contact" />
            </intent-filter>
        </activity>

        <activity android:name=".presence.AnonymousFetchPresenceCapabilities"/>

		<receiver android:name=".presence.PresenceInvitationReceiver">
            <intent-filter>
		    	<action android:name="com.orangelabs.rcs.presence.PRESENCE_SHARING_INVITATION" />
            </intent-filter>
        </receiver>
        
        <receiver android:name=".presence.ContactPresenceChangedReceiver">
            <intent-filter>
		    	<action android:name="com.orangelabs.rcs.presence.CONTACT_INFO_CHANGED" />
		    	<action android:name="com.orangelabs.rcs.presence.CONTACT_PHOTO_CHANGED" />
            </intent-filter>
        </receiver>

		<activity android:name=".presence.ReceivePresenceInvitation"/>

		<!-- Messaging RI --> 
        <activity android:name=".MessagingRI"/>

        <activity android:name=".messaging.InitiateFileTransfer"
        	android:icon="@drawable/ri_quick_ft_icon"
        	android:label="@string/label_quick_ft">
			<intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="vnd.android.cursor.item/com.orangelabs.rcs.capability.file-transfer" />
            </intent-filter>
		</activity>

		<receiver android:name=".messaging.FileTransferInvitationReceiver">
            <intent-filter>
		    	<action android:name="com.orangelabs.rcs.messaging.FILE_TRANSFER_INVITATION" />
            </intent-filter>
        </receiver>

        <activity android:name=".messaging.ReceiveFileTransfer" />

        <activity android:name=".messaging.InitiateChat"
        	android:icon="@drawable/ri_quick_chat_icon"
        	android:label="@string/label_quick_chat">
			<intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="vnd.android.cursor.item/com.orangelabs.rcs.capability.im-session" />
            </intent-filter>
		</activity>

        <activity android:name=".messaging.InitiateChatGroup"/>

		<receiver android:name=".messaging.ChatInvitationReceiver">
            <intent-filter>
		    	<action android:name="com.orangelabs.rcs.messaging.CHAT_INVITATION" />
            </intent-filter>
        </receiver>

        <activity android:name=".messaging.ReceiveChat" />

        <activity android:name=".messaging.ChatView" />
        
        <activity android:name=".messaging.ChatList" />

        <!-- Rich call RI --> 
        <activity android:name=".RichCallRI"/>

        <activity android:name=".richcall.InitiateImageSharing"/>

        <activity android:name=".richcall.InitiateLiveVideoSharing"/>
        	
        <activity android:name=".richcall.InitiatePrerecordedVideoSharing"/>

		<receiver android:name=".richcall.ImageSharingInvitationReceiver">
            <intent-filter>
		    	<action android:name="com.orangelabs.rcs.richcall.IMAGE_SHARING_INVITATION" />
            </intent-filter>
        </receiver>

        <activity android:name=".richcall.ReceiveImageSharing" />
        
		<receiver android:name=".richcall.VideoSharingInvitationReceiver">
            <intent-filter>
		    	<action android:name="com.orangelabs.rcs.richcall.VIDEO_SHARING_INVITATION" />
            </intent-filter>
        </receiver>

        <activity android:name=".richcall.ReceiveVideoSharing"/>
        
        <activity android:name=".richcall.RequestContentSharingCapabilities"/>

		<!-- EventLog RI -->
		<activity android:name=".eventlog.EventLog"
        	android:icon="@drawable/ri_quick_eventlog_icon"
        	android:label="@string/label_quick_evtlog">
			<intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="vnd.android.cursor.item/com.orangelabs.rcs.event-log" />
            </intent-filter>
		</activity>
		
	

</application>

</manifest> 