	    <TableRow>
	        <TextView android:text=""
 			 android:layout_marginLeft="5dip"
	         android:gravity="right"/>
	        <CheckBox android:id="@+id/cs_video"
			 android:layout_marginLeft="5dip"
			 android:layout_marginRight="5dip"
	         android:textStyle="bold"
			 android:clickable="false"
