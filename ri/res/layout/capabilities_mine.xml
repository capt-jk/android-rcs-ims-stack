	    </TableRow>
	    
		<TableRow>
	        <TextView android:text=""
 			 android:layout_marginLeft="5dip"
	         android:gravity="right"/>
	        <CheckBox android:id="@+id/presence_discovery"
			 android:layout_marginLeft="5dip"
			 android:layout_marginRight="5dip"
	         android:textStyle="bold"
			 android:clickable="false"
             android:text="@string/label_capabilities_presence_discovery" />
	    </TableRow>
		
		<TableRow>
	        <TextView android:text=""
 			 android:layout_marginLeft="5dip"
	         android:gravity="right"/>
	        <CheckBox android:id="@+id/social_presence"
			 android:layout_marginLeft="5dip"
			 android:layout_marginRight="5dip"
	         android:textStyle="bold"
			 android:clickable="false"
             android:text="@string/label_capabilities_social_presence" />
	    </TableRow>

        <TableRow>
            <TextView android:text=""
             android:layout_marginLeft="5dip"
             android:gravity="right"/>
            <CheckBox android:id="@+id/geolocaction_push"
             android:layout_marginLeft="5dip"
             android:layout_marginRight="5dip"
             android:textStyle="bold"
             android:clickable="false"
             android:text="@string/label_capabilities_geolocation_push" />
        </TableRow>
        
        <TableRow>
            <TextView android:text=""
             android:layout_marginLeft="5dip"
             android:gravity="right"/>
            <CheckBox android:id="@+id/file_transfer_thumbnail"
             android:layout_marginLeft="5dip"
             android:layout_marginRight="5dip"
             android:textStyle="bold"
             android:clickable="false"
             android:text="@string/label_capabilities_file_transfer_thumbnail" />
        </TableRow>

        <TableRow>
            <TextView android:text=""
             android:layout_marginLeft="5dip"
             android:gravity="right"/>
