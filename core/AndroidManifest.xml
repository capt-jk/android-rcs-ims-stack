<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	android:versionCode="1"
    android:versionName="2.1.0"
	package="com.orangelabs.rcs">
      
	<uses-sdk android:minSdkVersion="5" />

	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.CALL_PHONE"/>
	<uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.MODIFY_PHONE_STATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>  
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_WAP_PUSH" />
	 
	<application android:label="@string/rcs_core_application_title"
	 android:icon="@drawable/rcs_icon">  
		
		<!-- RCS service -->	

		<service android:name="com.orangelabs.rcs.service.RcsCoreService">  
	        <intent-filter>
	            <action android:name="com.orangelabs.rcs.SERVICE" />
	            <action android:name="com.orangelabs.rcs.service.api.client.presence.IPresenceApi" />
	            <action android:name="com.orangelabs.rcs.service.api.client.messaging.IMessagingApi" />
	            <action android:name="com.orangelabs.rcs.service.api.client.richcall.IRichCallApi" />
	            <action android:name="com.orangelabs.rcs.service.api.client.management.IManagementApi" />	            
	            <action android:name="com.orangelabs.rcs.service.api.client.voip.IVoIpApi" />	            
	            <action android:name="com.orangelabs.rcs.service.api.client.toip.IToIpApi" />	            
	        </intent-filter>
	    </service>
	
		<!-- RCS settings application -->
	
		<activity android:name="com.orangelabs.rcs.settings.RcsSettingsApplication"
		 	android:label="@string/rcs_settings_title_settings"
		 	android:icon="@drawable/rcs_icon"
			android:clearTaskOnLaunch="true"
		 	android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>            
 		</activity>
 				
		<activity android:name="com.orangelabs.rcs.settings.SettingsDisplay"
			android:clearTaskOnLaunch="true"
		 	android:launchMode="singleInstance">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="com.orangelabs.rcs.SETTINGS" />                
            </intent-filter>            
 		</activity>

        <activity android:name="com.orangelabs.rcs.settings.UserProfileProvisionning"
			android:clearTaskOnLaunch="true"
		 	android:launchMode="singleInstance">
            <intent-filter>
        		<category android:name="android.intent.category.LAUNCHER" />
        		<category android:name="android.intent.category.DEFAULT" />
                <action android:name="com.orangelabs.rcs.PROVISIONING" />                
            </intent-filter>            
 		</activity>

		<activity android:name="com.orangelabs.rcs.settings.AboutDisplay" />

		<activity android:name="com.orangelabs.rcs.settings.PresenceSettingsDisplay" />

		<activity android:name="com.orangelabs.rcs.settings.CShSettingsDisplay" />

		<activity android:name="com.orangelabs.rcs.settings.MessagingSettingsDisplay" />
		
		<activity android:name="com.orangelabs.rcs.settings.UserProfileSettingsDisplay" />

		<!-- RCS data providers -->	

		<provider android:name="com.orangelabs.rcs.provider.eab.RichAddressBookProvider"
		 android:authorities="com.orangelabs.rcs.eab" />

		<provider android:name="com.orangelabs.rcs.provider.messaging.RichMessagingProvider"
		 android:authorities="com.orangelabs.rcs.messaging" />

		<provider android:name="com.orangelabs.rcs.provider.settings.RcsSettingsProvider"
		 android:authorities="com.orangelabs.rcs.settings" />
			
		<provider android:name="com.orangelabs.rcs.provider.sharing.RichCallProvider"
		 android:authorities="com.orangelabs.rcs.csh" />
			
		<provider android:name="com.orangelabs.rcs.provider.eventlogs.EventLogProvider"
		 android:authorities="com.orangelabs.rcs.eventlogs" />
	
		<!-- Device boot receiver -->	

		<receiver android:name="com.orangelabs.rcs.service.RcsServiceStartup">
	        <intent-filter>
	     		<action android:name="android.intent.action.BOOT_COMPLETED" />
	        </intent-filter>
	    </receiver>

		<receiver android:name="com.orangelabs.rcs.service.RcsServiceShutdown">
	        <intent-filter>
	     		<action android:name="android.intent.action.ACTION_SHUTDOWN" />
	        </intent-filter>
	    </receiver>
			
		<!-- Provisioning -->	
		<receiver android:name="com.orangelabs.rcs.provisioning.ProvisioningPushReceiver">  
   			<intent-filter>
   				<action android:name="android.provider.Telephony.WAP_PUSH_RECEIVED"/>  
            	<data android:mimeType="application/vnd.wap.sic"/>  
   			</intent-filter>  
		</receiver> 
			
</application> 

</manifest> 