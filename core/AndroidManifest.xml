<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	android:versionCode="1"
    android:versionName="2.1.2"
	package="com.orangelabs.rcs">
      
	<uses-sdk android:minSdkVersion="5" />

	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.CALL_PHONE"/>
	<uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.MODIFY_PHONE_STATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>  
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_WAP_PUSH" />
	<uses-permission android:name="android.permission.GET_ACCOUNTS" />
	<uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
	<uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
	<uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
	 
	<application android:label="@string/rcs_core_application_title"
	 android:icon="@drawable/rcs_icon">  
		
		<!-- RCS service -->	

		<service android:name="com.orangelabs.rcs.service.RcsCoreService">  
	        <intent-filter>
	            <action android:name="com.orangelabs.rcs.SERVICE" />
	            <action android:name="com.orangelabs.rcs.service.api.client.presence.IPresenceApi" />
	            <action android:name="com.orangelabs.rcs.service.api.client.messaging.IMessagingApi" />
	            <action android:name="com.orangelabs.rcs.service.api.client.richcall.IRichCallApi" />
	            <action android:name="com.orangelabs.rcs.service.api.client.management.IManagementApi" />	            
	            <action android:name="com.orangelabs.rcs.service.api.client.toip.IToIpApi" />	            
	        </intent-filter>
	    </service>
	
		<!-- RCS settings application -->
	
		<activity android:name="com.orangelabs.rcs.settings.SettingsDisplay"
		 	android:label="@string/rcs_settings_title_settings"
		 	android:icon="@drawable/rcs_icon"
			android:clearTaskOnLaunch="true"
		 	android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>            
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="com.orangelabs.rcs.SETTINGS" />                
            </intent-filter>            
 		</activity>

        <activity android:name="com.orangelabs.rcs.settings.UserProfileProvisionning"
			android:clearTaskOnLaunch="true"
		 	android:launchMode="singleInstance">
            <intent-filter>
        		<category android:name="android.intent.category.LAUNCHER" />
        		<category android:name="android.intent.category.DEFAULT" />
                <action android:name="com.orangelabs.rcs.PROVISIONING" />                
            </intent-filter>            
 		</activity>
 		
 		<!-- Authenticator service for authenticate user's account information -->
        <service android:name="com.orangelabs.rcs.addressbook.AuthenticationService"
            android:exported="true">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>
            <meta-data android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/rcs_settings_authenticator"
            />
        </service>

		<activity android:name="com.orangelabs.rcs.settings.AboutDisplay" />

		<activity android:name="com.orangelabs.rcs.settings.PresenceSettingsDisplay" />

		<activity android:name="com.orangelabs.rcs.settings.CShSettingsDisplay" />

		<activity android:name="com.orangelabs.rcs.settings.MessagingSettingsDisplay" />
		
		<activity android:name="com.orangelabs.rcs.settings.UserProfileSettingsDisplay" />

        <!-- Sync adapter service to do the actual syncing -->
        <service android:name="com.orangelabs.rcs.addressbook.SyncAdapterService"
            android:exported="true">
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>
            <meta-data android:name="android.content.SyncAdapter"
                android:resource="@xml/rcs_settings_syncadapter" />
            <meta-data android:name="android.provider.CONTACTS_STRUCTURE"
                android:resource="@xml/rcs_settings_contacts" />
        </service>
        
		<!-- Activity to create a RCS account-->
        <activity android:name="com.orangelabs.rcs.addressbook.SetupRcsAccountActivity">
			<intent-filter>
                <action android:name="android.intent.action.VIEW"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
		</activity>
        
		<!-- RCS data providers -->	

		<provider android:name="com.orangelabs.rcs.provider.eab.RichAddressBookProvider"
		 android:authorities="com.orangelabs.rcs.eab" />

		<provider android:name="com.orangelabs.rcs.provider.messaging.RichMessagingProvider"
		 android:authorities="com.orangelabs.rcs.messaging" />

		<provider android:name="com.orangelabs.rcs.provider.settings.RcsSettingsProvider"
		 android:authorities="com.orangelabs.rcs.settings" />
			
		<provider android:name="com.orangelabs.rcs.provider.sharing.RichCallProvider"
		 android:authorities="com.orangelabs.rcs.csh" />
			
		<provider android:name="com.orangelabs.rcs.provider.eventlogs.EventLogProvider"
		 android:authorities="com.orangelabs.rcs.eventlogs" />
	
		<!-- Device boot receiver -->	

		<receiver android:name="com.orangelabs.rcs.service.RcsServiceStartup">
	        <intent-filter>
	     		<action android:name="android.intent.action.BOOT_COMPLETED" />
	        </intent-filter>
	    </receiver>

		<receiver android:name="com.orangelabs.rcs.service.RcsServiceShutdown">
	        <intent-filter>
	     		<action android:name="android.intent.action.ACTION_SHUTDOWN" />
	        </intent-filter>
	    </receiver>
			
		<!-- Provisioning -->	
		<receiver android:name="com.orangelabs.rcs.provisioning.ProvisioningPushReceiver">  
   			<intent-filter>
   				<action android:name="android.provider.Telephony.WAP_PUSH_RECEIVED"/>  
            	<data android:mimeType="application/vnd.wap.sic"/>  
   			</intent-filter>  
		</receiver> 
			
		<!-- Changing locale -->	
		<receiver android:name="com.orangelabs.rcs.addressbook.LocaleChangedReceiver">  
   			<intent-filter>
   				<action android:name="android.intent.action.LOCALE_CHANGED"/>  
   			</intent-filter>  
		</receiver> 
		
		<!-- Modifying account -->	
		<receiver android:name="com.orangelabs.rcs.addressbook.AccountChangedReceiver">  
   			<intent-filter>
   				<action android:name="android.accounts.LOGIN_ACCOUNTS_CHANGED"/>  
   			</intent-filter>  
		</receiver>		
			
</application> 

</manifest> 